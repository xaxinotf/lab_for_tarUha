@model IEnumerable<DeBiLaba2.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<style>
    .gradient {
        background: linear-gradient(to right, #ff7f50, #ffc0cb);
        color: white;
    }
</style>

<h1>Табличка замовлень</h1>

<p>
    <a asp-action="Create">Додати нове замовлення</a>
</p>
<table class="table gradient">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipTypeNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentType.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipTypeNavigation.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Змінити замовлення</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
