@model IEnumerable<DeBiLaba2.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<style>
    .pink-gradient {
        background: linear-gradient(to right, #FFB6C1, #FF69B4);
    }
</style>

<h1>Таблиця користувачів</h1>

<p>
    <a asp-action="Create">Додати користувача</a>
</p>
<table class="table pink-gradient">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити користувача</a>
                </td>
            </tr>
        }
    </tbody>
</table>
